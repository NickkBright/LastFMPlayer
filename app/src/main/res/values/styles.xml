<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/my_primaryColor</item>
        <item name="colorPrimaryDark">@color/my_primaryDarkColor</item>
        <item name="colorAccent">@color/my_secondaryColor</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/grey_500</item>
        <item name="colorAccent">@color/blue_A400</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>

    <style name="GridViewActivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
    </style>


